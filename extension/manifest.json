{
  "manifest_version": 3,
  "name": "Jifree - Kanji Reading Helper",
  "version": "1.0.0",
  "description": "Webページ上の選択した漢字に読み仮名を表示します。",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab"
  ],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "run_at": "document_end"
    }
  ]
}
